{
    "name": "postguard-website",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build-main": "vite build --mode main",
        "build-stable": "vite build --mode stable",
        "preview": "vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write src/**/"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
        "@playwright/test": "^1.32.3",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.50.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-svelte": "^2.35.1",
        "lazysizes": "^5.3.2",
        "prettier": "^3.1.0",
        "prettier-plugin-svelte": "^3.2.6",
        "rollup": "^4.57.1",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "sass": "^1.62.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "svelte-i18n": "^4.0.1",
        "svelte-preprocess": "^6.0.0",
        "tslib": "^2.5.0",
        "typescript": "^5.5.0",
        "vite": "^7.3.1",
        "vite-plugin-top-level-await": "^1.6.0",
        "vite-plugin-wasm": "^3.3.0"
    },
    "type": "module",
    "//": "Overrides are needed to fix security vulnerabilities in transitive dependencies. Cookie <0.7.0 had out-of-bounds character issues, and esbuild <=0.24.2 had a dev server vulnerability. These overrides force newer, patched versions until upstream packages update their dependencies.",
    "overrides": {
        "cookie": "^1.1.1",
        "esbuild": "^0.27.2"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "dependencies": {
        "@e4a/pg-wasm": "^0.3.0",
        "@iconify/svelte": "^4.0.2",
        "@privacybydesign/yivi-client": "^0.1.3",
        "@privacybydesign/yivi-core": "^0.1.3",
        "@privacybydesign/yivi-css": "^0.1.3",
        "@privacybydesign/yivi-web": "^0.1.3",
        "@transcend-io/conflux": "^6.1.1",
        "@types/dropzone": "^5.7.9",
        "country-flag-icons": "^1.6.4",
        "dropzone": "^6.0.0-beta.2",
        "jwt-decode": "^3.1.2",
        "libphonenumber-js": "^1.12.31",
        "postal-mime": "^1.0.16",
        "web-streams-polyfill": "^4.2.0"
    }
}
